

<div class="row">
  <div class="col-6"><h1>Users</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ Add User</a>
  </div>
</div>

{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{removedUser}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Customize</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}} <!-- iterates the data from the object rows -->
    <tr>
      <th scope="row">{{this.usersId}}</th>
      <td>{{this.usersFN}}</td>
      <td>{{this.usersLN}}</td>
      <td>{{this.usersEmail}}</td>
      <td>
        <a href="/viewuser/{{this.usersId}}" type="button" class="btn btn-dark btn-sm mt-1 mb-1"><i class="bi bi-eye"></i> View</a>
        <a href="/edituser/{{this.usersId}}" type="button" class="btn btn-dark btn-sm mt-1 mb-1"><i class="bi bi-trash"></i> Edit</a>
        <a href="/{{this.usersId}}" type="button" class="btn btn-dark btn-sm mt-1 mb-1"><i class="bi bi-eye"></i> Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>