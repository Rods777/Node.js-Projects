<!DOCTYPE html>
<html>
    <head>
        <title>{{title}}</title> <!-- shows the value of title in HANDLEBARS -->
        <link rel="stylesheet" href="css/styles.css"/> <!-- static path for public folder is already set in app.js -->
    </head>
    <body>
        <div class="main-content">
            {{>header}} <!-- refers to the partials -->
            <article class="widget">
                <form class="weatherLocation"><input placeholder="Location..." type = "text"/><button>Search</button>
                </form>
                <div class="weatherIcon"><i class="wi wi-day-cloudy"></i></div>
                <div class="weatherInfo">
                    <div class="temperature"><span></span></div>
                    <div class="description">    
                        <div class="weatherCondition"></div>    
                        <div class="place"></div>
                    </div>
                </div>
                <div class="date"></div>
            </article>
        </div>
        <script src="js/script.js"></script> <!-- absolute path -->
    </body>
</html>